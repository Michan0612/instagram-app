.container
  .border_room
  = image_tag 'Rectangle.png', class: 'img'
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :Account, class: 'text'
      %br/
      = f.text_field :username, autofocus: true, class: 'input_room'
    .field
      = f.label :email, class: 'text'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input_room'
    .field
      = f.label :password, class: 'text'
      - if @minimum_password_length
        %em
      = f.password_field :password, autocomplete: "new-password", class: 'input_room'
      = render "devise/shared/links"

    .actions
      = f.submit "CREATE ACCOUNT", class: 'submit_btn'
  .border
